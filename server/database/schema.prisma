generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  ulid      String   @id
  email     String   @unique
  password  String
  admin     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model AuthSession {
  userUlid  String
  token     String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@id([userUlid, token])
  @@map("auth_sessions")
}

model Testimonial {
  id          Int       @id @default(autoincrement())
  senderName  String
  senderJob   String
  comment     String
  avatar      String?
  createdAt   DateTime  @default(now())
  validatedAt DateTime?

  @@map("testimonials")
}

model Client {
  ulid      String   @id
  name      String
  company   String?
  siret     String?
  siren     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects Project[]

  @@map("clients")
}

enum Service {
  design
  development
  photography
}

model Project {
  ulid        String    @id
  name        String
  description String
  thumbnail   String?
  clientUlid  String?
  service     Service
  tags        String
  content     String    @default("[]")
  selectedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  client Client? @relation(fields: [clientUlid], references: [ulid])

  @@map("projects")
}
